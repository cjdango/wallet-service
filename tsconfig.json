{
  "compilerOptions": {
    "outDir": "./build",
    "lib": ["es5", "es6", "es7"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },

  "include": ["src/**/*", "tests/**/*"]
}
